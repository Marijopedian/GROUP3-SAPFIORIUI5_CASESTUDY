<mvc:View
    controllerName="group3casestudy.controller.CreateOrder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page id="createOrderPage" title="Create Order" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox id="createOrderVBox" class="sapUiSmallMargin">
                <f:SimpleForm id="orderDetailForm" editable="true" layout="ResponsiveGridLayout" title="Order Detail"
                    labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12"
                    adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
                    columnsXL="1" columnsL="1" columnsM="1">

            <Label id="receivingPlantLabel" text="Receiving Plant" labelFor="receivingPlantInput"/>
            <Input
                id="receivingPlantInput"
                value="{vm>/NewOrder/ReceivingPlant}"
                valueLiveUpdate="true"
                showValueHelp="true"
                valueHelpRequest="onReceivingPlantHelp"
                editable="true"
                required="true" />
 
            <!-- Delivering Plant (bind to code) -->
            <Label id="deliveringPlantLabel" text="Delivering Plant" labelFor="deliveringPlantInput"/>
            <Input
                id="deliveringPlantInput"
                value="{vm>/NewOrder/DeliveringPlant}"
                valueLiveUpdate="true"
                showValueHelp="true"
                valueHelpRequest="onDeliveringPlantHelp"
                editable="true"
                required="true" />
                </f:SimpleForm>
            </VBox>

            <VBox id="createProductVBox" class="sapUiSmallMargin">
                <!-- Toolbar for Add/Delete Buttons -->
                <Toolbar id="_IDGenToolbar">
                    <Title id="_IDGenTitle" text="Products"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacers"/>
                    <Button id="_IDGenBtn" icon="sap-icon://add" press="onAddProduct"/>
                    <Button id="_IDGenBtn1" icon="sap-icon://delete" press="onDeleteProduct"/>
                </Toolbar>

                <!-- Products Table -->
                <Table id="productsTable" mode="MultiSelect" items="{vm>/NewOrder/Products}">
                    <columns>
                        <Column id="_IDGenClmn"><Text id="_IDGenTxt" text="Product Name"/></Column>
                        <Column id="_IDGenClmn1"><Text id="_IDGenTxt1" text="Quantity"/></Column>
                        <Column id="_IDGenClmn2"><Text id="_IDGenTxt2" text="Price per Quantity"/></Column>
                        <Column id="_IDGenClmn3"><Text id="_IDGenTxt3" text="Total Price"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItm">
                            <cells>
                                <Text id="_IDGenTxt4" text="{vm>ProductDescription}"/>
                                <Text id="_IDGenTxt5" text="{vm>Quantity}"/>
                                <Text id="_IDGenTxt6" text="{vm>PricePerQuantity}"/>
                                <Text id="_IDGenTxt7" text="{vm>TotalPrice}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>

        <footer>
            <Toolbar id="_IDGenToolbr1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                <Button id="_IDGenButton2" text="Save" type="Emphasized" press="onSave"/>
                <Button id="_IDGenButton3" text="Cancel" press="onCancel"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>